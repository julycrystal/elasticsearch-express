{
    "compilerOptions": {
        "emitDecoratorMetadata": true, 
        "esModuleInterop": true, 
        "experimentalDecorators": true, 
        "lib": [
            "es6", 
            "dom", 
            "es2017"
        ], 
        "module": "commonjs", 
        "noImplicitAny": false, 
        "outDir": "./dist/src", 
        "removeComments": true, 
        "skipLibCheck": true, 
        "sourceMap": true, 
        "target": "ES6"
    }, 
    "exclude": [
        "node_modules"
    ], 
    "filesGlob": [
        "./src/**/*.ts"
    ]
}